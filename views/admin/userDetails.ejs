<%- include ("../partials/adminHeader") %>

<div class="col py-5 mt-5">
  <div class="d-flex align-items-center justify-content-center">
    <h1 class="">User details</h1>
  </div>
  <table class="table mt-5" id="table">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Customer Name</th>
        <th scope="col">email</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Controll</th>
      </tr>
    </thead>
    <tbody>
      <% let count=1 %> <% users.forEach((user)=>{ %>
      <tr>
        <td><%= count %></td>
        <td><%=user.name %></td>
        <td><%=user.email %></td>
        <td><%=user.phone %></td>
        <td>
          <% if(user.isBlocked===false) { %>
          <button
            type="button"
            class="btn btn-danger"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal-confirm"
          >
            Block
          </button>
          <% }else{ %>
          <button
            type="button"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal-confirm"
          >
            Unblock
          </button>
          <%}%>
          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal-confirm"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">
                    Confirmation
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <% if(user.isBlocked===false) { %>
                <div class="modal-body">
                  Are you sure you want to Block this user?
                </div>
                <% }else{ %>
                <div class="modal-body">
                  Are you sure you want to Unblock user?
                </div>
                <%}%>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <% if(user.isBlocked===false) { %>
                  <a href="/admin/blockUser/<%= user._id%>"
                    ><button type="button" class="btn btn-danger">
                      Block
                    </button></a
                  >
                  <% }else{ %>
                  <a href="/admin/unblockUser/<%= user._id%>"
                    ><button type="button" class="btn btn-primary">
                      Unblock
                    </button></a
                  >
                  <%}%>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% count++ %> <% }) %>
    </tbody>
  </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
