<%- include ("../partials/adminHeader") %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
      <h5 class="card-header">
        Requests to cancel order
      </h5>
      <div class="card-body">
        <div class="table-responsive text-nowrap">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Customer name</th>
                <th scope="col">Order date</th>
                <th scope="col">Message</th>
                <th scope="col">Payment status</th>
                <th scope="col">Total amount</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% requestData.forEach((data)=>{ %>
              <tr>
                <td>
                  <a href="/admin/orderedProduct/<%=data.order._id%>"><%= data.order.name %></a>
                </td>

                <td>
                  <%= data.order.orderDate %>
                </td>
                <td>
                  <%= data.message %>
                </td>
                <td>
                  <%= data.order.paymentStatus %>
                </td>
                <td>â‚¹ <%= data.order.totalAmount %>
                </td>
                <td>
                  <a href="/admin/acceptCancel/<%=data.order._id%>">
                    <button type="button" class="btn btn-success mt-1">
                      <i class="bx bx-user-check me-1"></i>Accept
                    </button>
                  </a>
                </td>
              </tr>
              <% }) %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Content wrapper -->

<%- include ("../partials/adminFooter") %>