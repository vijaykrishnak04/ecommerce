<%- include ("../partials/adminHeader") %>

        <!-- Content wrapper -->
        <div class="content-wrapper">

          <div class="container-xxl flex-grow-1 container-p-y">
            <div class=" d-flex  justify-content-center mt-2 mb-2">
              <h2>Dashboard</h2>
            </div>
            <div class="d-flex align-items-center justify-content-between ">

              <div class="shadow p-3 mb-3  rounded bg-white" style="height: 90px;width: 325px;">

                <div class="d-flex align-items-center justify-content-center">
                  <h6 class="text-info">Today's Revenue</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <h2 class="">₹ <%=todayRevenue %>
                  </h2>
                </div>

              </div>

              <div class=" shadow p-3 mb-3  rounded bg-white" style="height: 90px;width: 325px;">

                <div class="d-flex align-items-center justify-content-center">
                  <h6 class="text-info">monthly Revenue</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <h2 class="">₹ <%=monthlyRevenue %>
                  </h2>
                </div>

              </div>

              <div class=" shadow p-3 mb-3  rounded bg-white" style="height: 90px;width: 325px;">

                <div class="d-flex align-items-center justify-content-center">
                  <h6 class="text-info">Total Revenue</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <h2 class="">₹ <%=totalRevenue %>
                  </h2>
                </div>


              </div>

            </div>

            <div class="d-flex align-items-center justify-content-between ">

              <div class="shadow p-3 mb-3  rounded bg-white" style="height: 90px;width: 325px;">

                <div class="d-flex align-items-center justify-content-center">
                  <h6 class="text-info">Total orders</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <h2 class=""><%= allOrders %>
                  </h2>
                </div>

              </div>

              <div class=" shadow p-3 mb-3  rounded bg-white" style="height: 90px;width: 325px;">

                <div class="d-flex align-items-center justify-content-center">
                  <h6 class="text-info">Active users</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <h2 class=""><%=activeUsers %>
                  </h2>
                </div>

              </div>

              <div class=" shadow p-3 mb-3  rounded bg-white" style="height: 90px;width: 325px;">

                <div class="d-flex align-items-center justify-content-center">
                  <h6 class="text-info">Number of products</h6>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                  <h2 class=""><%=product %>
                  </h2>
                </div>


              </div>

            </div>


            <div class="d-flex align-items-center justify-content-between ">


              <div class=" shadow p-3 mb-1  rounded bg-white" style="height: 90px;width: 244px;">
                <h6 class="text-info">Pending orders</h6>
                <h4 id="pending">
                  <%= pending %>
                </h4>

              </div>

              <div class=" shadow p-3 mb-1  rounded bg-white" style="height: 90px;width: 244px;">
                <h6 class="text-info">Shippped orders </h6>
                <h4 id="shipped">
                  <%= shipped %>
                </h4>

              </div>

              <div class=" shadow p-3 mb-1  rounded bg-white" style="height: 90px;width: 244px;">
                <h6 class="text-info">Delivered Orders </h6>
                <h4 id="delivered">
                  <%= delivered %>
                </h4>

              </div>

              <div class=" shadow p-3 mb-1  rounded bg-white" style="height: 90px;width: 244px;">
                <h6 class="text-info">Cancelled orders </h6>
                <h4 id="cancelled">
                  <%= cancelled %>
                </h4>

              </div>
            </div>



          </div>



          <input type="hidden" value="<%= online %>" id="online">
          <input type="hidden" value="<%= cod %>" id="cod">


          <div>
            <div class="row" style="margin: 0;">

              <div class="col-xl-6 col-12">
                <canvas id="myChart"></canvas>
              </div>
              <div class="col-xl-6 col-12">
                <canvas id="salse-revenue"></canvas>
              </div>

            </div>
          </div>
        </div>
        <!-- Content wrapper -->

<%- include ("../partials/adminFooter") %>