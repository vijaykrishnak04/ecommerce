<%- include ("../layout/layout2") %>

<body>
  <!-- Start Header Area -->
  <%- include ("../partials/userHeader") %>
  <!-- End Header Area -->

  <!-- Start Banner Area -->
  <section class="banner-area organic-breadcrumb">
    <div class="container">
      <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
        <div class="col-first">
          <h1>Checkout</h1>
          <nav class="d-flex align-items-center">
            <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
            <a href="single-product.html">Checkout</a>
          </nav>
        </div>
      </div>
    </div>
  </section>
  <!-- End Banner Area -->

  <!--================Checkout Area =================-->
  <section class="checkout_area section_gap">
    <div class="row justify-content-center">
      <div class="col-xl-10 ftco-animate">
        <!-- Address edit -->
        <section class="ftco-section">
          <form id="placeOrder">
            <div class="container">
              <div class="col-xl-12">
                <div class="row justify-content-center">
                  <div class="container pb-4">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      Add new address
                    </button>
                  </div>

                  <div class="col-md-6 mb-4">
                    <div class="shipping-section">
                      <div class="form-group">
                        <label for="country">Select Shipping Address</label>
                        <div class="default-select">
                          <select required aria-placeholder="select your address" class="form-control form-select mt-2" style="color: #000" onchange="updateAddressDetails(this.value)">
                            <% if (userData.addressDetails &&
                            userData.addressDetails.length> 0) { %> <% for (let
                            i=0; i < userData.addressDetails.length; i++) { %>
                            <option value="<%=userData.addressDetails[i]._id%>">
                              <%=userData.addressDetails[i].housename%>
                            </option>
                            <% } %> <% } else { %>
                            <p>No address selected</p>
                            <% } %>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="row align-items-end">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="firstname">Phone number</label>
                        <input type="number" required name="phone" id="phone" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="ib393" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="firstname">House Name</label>
                        <input type="text" required name="housename" id="housename" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="ib393" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="lastname">Area</label>
                        <input type="text" required id="area" name="area" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="4xtq1b" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="streetaddress">Land Mark</label>
                        <input type="text" required id="landmark" name="landMark" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="iwf96m" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="streetaddress">District</label>
                        <input type="text" required id="district" name="district" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="4xtq1b" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="towncity">State</label>
                        <input type="text" required id="state" name="state" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid=" 4iwr3" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="postcodezip">Post Office</label>
                        <input type="text" required id="postoffice" name="postOffice" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="y5r53" />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phone">Pincode</label>
                        <input type="number" required id="pincode" name="pincode" style="
                            font-weight: bold;
                            color: rgb(92, 92, 92) !important;
                          " class="form-control" placeholder="" fdprocessedid="w97al9" />
                      </div>
                    </div>

                    <div class="container d-flex">
                      <div class="form-group mt-5">
                        <h6>Have coupon? Apply here!</h6>
                        <div class="input-group">
                          <input type="text" class="form-control coupon" name="coupon" placeholder="Coupon code" />
                          <span class="input-group-append"></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row mt-5 pb-5 d-flex">
              <div class="col-md-6">
                <div class="cart-detail cart-total p-3 p-md-4" style="background-color: #ffebbd !important">
                  <h3 class="billing-heading mb-4">Order Summary</h3>
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% productData.forEach(function(product) {%> <% var
                      a=product.productDetail.price%> <% var
                      b=product.productQuantity%> <% var c=a*b %>
                      <tr>
                        <td><%=product.productDetail.name%></td>
                        <td><%=product.productQuantity%></td>
                        <td><%=c%> ₹</td>
                      </tr>
                      <% }) %>
                      <tr>
                        <td colspan="2">Total Amount:</td>
                        <td><%=sum%> ₹</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="col-md-6">
                <div class="cart-detail p-3 p-md-4" style="background-color: #ffebbd !important">
                  <h3 class="billing-heading mb-4">Payment Method</h3>
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="COD" name="paymentMethod" class="mr-2" required />
                          COD (cash on delivery)</label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="Online" name="paymentMethod" class="mr-2" checked required />Online</label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="Wallet" name="paymentMethod" class="mr-2" required />Wallet</label>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-md-12">
                      <div class="radio">
                        <label><input type="radio" value="Wallet and Online" name="paymentMethod" class="mr-2" required />Wallet and Online</label>
                      </div>
                    </div>
                  </div>
                  <button style="border: none" class="genric-btn primary circle arrow" type="submit" value="submit">
                    Place an Order
                  </button>
                </div>
              </div>
            </div>
          </form>
        </section>
      </div>
    </div>

    <!--================Add address modal Area =================-->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add new Address</h5>
          </div>
          <div class="modal-body">
            <form action="/addNewAddress" method="post" onsubmit="return validateaddress()">
              <div class="mb-1">
                <label for="phone" class="col-form-label">Phone:</label>
                <input required type="number" class="form-control" id="phone" name="phone" />
                <small id="phoneError" class="text-danger err"></small>
              </div>
              <div class="mb-1">
                <label for="housename" class="col-form-label">Housename:</label>
                <input required type="text" class="form-control" id="housename" name="housename" />
                <small id="housenameError" class="text-danger err"></small>
              </div>
              <div class="mb-1">
                <label for="area" class="col-form-label">Area:</label>
                <input required type="text" class="form-control" id="area" name="area" />
                <small id="areaError" class="text-danger err"></small>
              </div>
              <div class="mb-1">
                <label for="landmark" class="col-form-label">Landmark:</label>
                <input required type="text" class="form-control" id="landmark" name="landmark" />
                <small id="landmarkError" class="text-danger err"></small>
              </div>
              <div class="mb-1">
                <div class="row">
                  <div class="col-md-6 mb-3 p-0">
                    <label for="district">District</label>
                    <input required type="text" class="form-control" id="district" name="district" />
                    <small id="districtError" class="text-danger err"></small>
                  </div>
                  <div class="col-md-6 mb-3 p-0">
                    <label for="state">State</label>
                    <input required type="text" class="form-control" id="state" name="state" />
                    <small id="stateError" class="text-danger err"></small>
                  </div>
                </div>
              </div>
              <div class="mb-1">
                <div class="row">
                  <div class="col-md-6 mb-1 p-0">
                    <label for="postoffice">Post office</label>
                    <input required type="text" class="form-control" id="postoffice" name="postoffice" />
                    <small id="postofficeError" class="text-danger err"></small>
                  </div>
                  <div class="col-md-6 mb-1 p-0">
                    <label for="pin">Pincode</label>
                    <input required type="text" class="form-control" id="pin" name="pin" />
                    <small id="pinError" class="text-danger err"></small>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Close
                </button>
                <button type="submit" value="submit" class="btn btn-primary">
                  Add
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================End Checkout Area =================-->

  <!-- start footer Area -->

  <%- include ("../partials/userFooter") %>
  <script>
    
    function validateaddress() {

      const phone = document.getElementById("phone").value;
      const housename = document.getElementById("housename").value;
      const area = document.getElementById("area").value;
      const landmark = document.getElementById("landmark").value;
      const district = document.getElementById("district").value;
      const state = document.getElementById("state").value;
      const postoffice = document.getElementById("postoffice").value;
      const pin = document.getElementById("pin").value;

      let errors = false;

      if (phone.trim() === "") {
        document.getElementById("phoneError").innerHTML = "Please enter a valid phone number";
        errors = true;
      } else {
        document.getElementById("phoneError").innerHTML = "";
      }

      if (housename.trim() === "") {
        document.getElementById("housenameError").innerHTML =
          "Please enter housename";
        errors = true;
      } else {
        document.getElementById("housenameError").innerHTML = "";
      }

      return !errors;

    }

    async function updateAddressDetails(addressId) {
      const res = await fetch("/getAddressDetails/" + addressId);
      const data = await res.json();
      if (data.message === "Address not found") {
        document.querySelector("#phone").value = "";
        document.querySelector("#housename").value = "";
        document.querySelector("#area").value = "";
        document.querySelector("#landmark").value = "";
        document.querySelector("#district").value = "";
        document.querySelector("#state").value = "";
        document.querySelector("#postoffice").value = "";
        document.querySelector("#pincode").value = "";
      } else {
        document.querySelector("#phone").value = data.phone;
        document.querySelector("#housename").value = data.housename;
        document.querySelector("#area").value = data.area;
        document.querySelector("#landmark").value = data.landMark;
        document.querySelector("#district").value = data.district;
        document.querySelector("#state").value = data.postoffice;
        document.querySelector("#postoffice").value = data.state;
        document.querySelector("#pincode").value = data.pin;
      }
    }
  </script>
</body>