<%- include ("../partials/adminHeader") %>
<div class="col py-5">
  <section class="mt-4 p-5">
    <% if (productCount != 0) { %>
    <div class="d-flex align-items-center justify-content-center">
      <h1 class="">Product details</h1>
    </div>
    <div class="container mt-2 table-responsive">
      <table class="table mt-2" id="example" class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Stock</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let count=1 %> <% product.forEach((products)=> { %>
          <tr>
            <td><%=count %></td>
            <td>
              <% for (let i=0;i< 3; i++) { %>
              <a data-bs-toggle="modal" data-bs-target="#editimage<%=products._id%><%= i %>" data-id="<%= products.image[i]._id%>"><img style="height: 2em; width: 2.5em" src="/<%= products.image[i].path %>" /></a>

              <!-- modal EditImage -->
              <div class="modal fade" id="editimage<%=products._id%><%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabeldelete" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabelLogout">
                        Edit Image
                      </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <form action="/admin/editimage/<%=products._id%>/<%= products.image[i]._id %>" method="post" enctype="multipart/form-data">
                      <div class="modal-body">
                        <p>Select the images of product?</p>
                        <div class="form-group">
                          <label class="col control-label" for="filebutton">images</label>
                          <div class="col-lg-12">
                            <input id="filebutton" required name="images" class="input-file" type="file" />
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">
                          Cancel
                        </button>
                        <button type="submit" class="btn btn-outline-dark">
                          Edit
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <% } %>
            </td>
            <td><%=products.name %></td>
            <td><%=products.price%></td>
            <td><%=products?.category?.category_name%></td>
            <td><%=products.stock%></td>

            <td>
              <a href="/productView/<%=products._id%>" class="btn btn-outline-success">View</a>
              <a href="/admin/editProduct/<%=products._id%>" class="btn btn-outline-warning">Edit</a>
              <% if(products.delete===false) { %>
              <button type="button" class="btn btn-warning mt-1" id="<%=products._id%>" data-bs-toggle="modal" data-bs-target="#exampleModal-<%=products._id%>">
                Delete
              </button>
              <% }else{ %>
              <button type="button" class="btn btn-warning mt-1" id="<%=products._id%>" data-bs-toggle="modal" data-bs-target="#exampleModal-<%=products._id%>">
                Restore
              </button>
              <%}%>
              <!-- Modal -->
              <div
                class="modal fade"
                id="exampleModal-<%=products._id%>"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
              >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel>">
                      Delete confirmation
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">Are you sure ?</div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                      Close
                    </button>
                    <% if(products.delete===false) {%>
                    <button class="btn btn-success" id="<%=products.name%>" onclick="deleteData('<%=products._id%>','<%=products.name%>')">
                      Delete
                    </button>
                    <% }else{ %>
                    <button class="btn btn-success" id="<%=products.name%>" onclick="deleteData('<%=products._id%>','<%=products.name%>')">
                      Restore
                    </button>
                    <%}%>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
          <% count++ %> <% })%>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <div>Oops no products</div>
    <% } %>
  </section>
</div>

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script>
  $(document).ready(function() {
    $("#example").DataTable();
  });

  function deleteData(id, name) {
    var xhr = new XMLHttpRequest();
    xhr.open("DELETE", "/admin/deleteProduct/" + id, true);
    xhr.onreadystatechange = function() {
      document.getElementById(id).innerHTML = "Restore";
      document.getElementById(name).innerHTML = "Restore";
      document.getElementById(name).onclick = function() {
        restoreData(id, name);
      };
    };
    xhr.send();
  }

  function restoreData(id, name) {
    var xhr = new XMLHttpRequest();
    xhr.open("PUT", "/admin/restoreProduct/" + id, true);
    xhr.onreadystatechange = function() {
      document.getElementById(id).innerHTML = "Delete";
      document.getElementById(name).innerHTML = "Delete";
      document.getElementById(name).onclick = function() {
        deleteData(id, name);
      };
    };
    xhr.send();
  }
</script>